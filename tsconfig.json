{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "strictPropertyInitialization": false,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@interfaces/*": ["interfaces/*"],
      "@config/*": ["config/*"],
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}